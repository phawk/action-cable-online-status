<h1 class="text-2xl mb-8 font-semibold">All members</h1>

<ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
  <% @users.each do |user| %>
    <li class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white text-center shadow">
      <div class="flex flex-1 flex-col p-8">
        <%= image_tag "avatars/#{user.username}.jpg", alt: user.username, class: "mx-auto h-32 w-32 flex-shrink-0 rounded-full" %>
        <h3 class="mt-6 text-sm font-medium text-gray-900">@<%= user.username %></h3>
        <dl class="mt-1 flex flex-grow flex-col justify-between">
          <dt class="sr-only">Active?</dt>
          <dd class="mt-3">
            <span class="rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-800">Online now</span>
          </dd>
        </dl>
      </div>
    </li>
  <% end %>
</ul>
